<% layout('layout') -%>

<div class="container">
  <div class="row">

    <div class="col-md-4">
      <img src="<%= product.image %>" width="auto " height="300">
    </div>

    <div class="col-md-4">

    </div>

    <div class="col-md-4">
      <label>Category:</label>
      <h3><%= product.category.name %></h3>
      <label>Name:</label>
      <h3><%= product.name %></h3>
      <label>Price:</label>
      <h1><%= product.price %></h1>
      <a href="/edit-product/<%= product._id %>" class="btn btn-primary btn-lg">Edit Product</a>
    </div>

  </div>
</div>
